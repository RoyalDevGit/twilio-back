{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "strict": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": "./src",
    "paths": { "*": ["*"] },
    "plugins": [
        {
            "transform": "@ovos-media/ts-transform-paths"
        }
    ]
  }
}